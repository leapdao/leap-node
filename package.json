{
  "name": "leap-node",
  "version": "4.4.0",
  "main": "index.js",
  "author": "Alex Lunyov <isuntc@gmail.com>",
  "license": "MPL-2.0",
  "scripts": {
    "start": "node index.js",
    "test": "./node_modules/.bin/jest --maxWorkers=4 --detectOpenHandles",
    "lint": "./node_modules/.bin/eslint src",
    "test:watch": "./node_modules/.bin/jest --watch --coverage=false",
    "precommit": "./node_modules/.bin/lint-staged",
    "machine-gun": "node tools/machine-gun.js"
  },
  "bin": {
    "leap-node": "./bin.js"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "git add",
      "eslint"
    ]
  },
  "eslintIgnore": [
    "docs/"
  ],
  "prettier": {
    "printWidth": 80,
    "tabWidth": 2,
    "useTabs": false,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5",
    "bracketSpacing": true
  },
  "keywords": [
    "blockchain",
    "ethereum",
    "proof-of-stake",
    "plasma"
  ],
  "dependencies": {
    "axios": "^0.18.0",
    "body-parser": "^1.18.3",
    "colors": "^1.3.1",
    "cors": "^2.8.4",
    "dashdash": "^1.14.1",
    "debug": "^3.1.0",
    "deterministic-json": "^1.0.4",
    "ethereumjs-tx": "1.3.7",
    "ethereumjs-util": "6.1.0",
    "ethereumjs-vm": "2.6.0",
    "express": "^4.16.3",
    "express-http-proxy": "^1.0.7",
    "fs-extra": "^5.0.0",
    "get-port": "^3.1.0",
    "jayson": "^2.0.6",
    "js-abci": "github:leapdao/js-abci#bc6f38f88269503b7b1032cb2294a1f1dc7e8fcc",
    "jsbi-utils": "^1.0.0",
    "jsondiffpatch": "^0.2.5",
    "leap-core": "0.30.0",
    "level": "^4.0.0",
    "lodash": "^4.17.10",
    "lodash.get": "^4.4.2",
    "rimraf": "^2.6.2",
    "rpc-websockets": "^4.1.2",
    "tendermint-node": "github:leapdao/tendermint-node#v0.31.0-leap.3",
    "tinyqueue": "^2.0.0",
    "truffle-hdwallet-provider": "^1.0.3",
    "varstruct": "^6.1.1",
    "web3": "1.0.0-beta.37"
  },
  "devDependencies": {
    "babel-core": "^6.26.3",
    "babel-eslint": "^8.2.3",
    "babel-preset-env": "^1.6.1",
    "eslint": "^4.19.1",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-import": "^2.11.0",
    "eslint-plugin-jest": "^21.17.0",
    "husky": "^0.14.3",
    "jest": "^23.0.1",
    "lint-staged": "^7.0.5",
    "prettier": "^1.12.1"
  },
  "jest": {
    "testEnvironment": "node",
    "clearMocks": true,
    "resetModules": true,
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.js"
    ],
    "setupFiles": [
      "<rootDir>/jestSetup.js"
    ],
    "coveragePathIgnorePatterns": [
      "src/utils/cleanupLotion.js",
      "src/utils/cliArgs.js",
      "src/utils/debug.js",
      "src/utils/printStartupInfo.js",
      "src/utils/sendTransaction.js",
      "src/utils/claimRewards.js",
      "src/utils/index.js",
      "src/txHelpers/makeTransfer.js",
      "src/txHelpers/printTx.js",
      "src/txHelpers/sendTx.js",
      "src/api/jsonrpc.js",
      "src/api/db.js",
      "src/api/methods/index.js",
      "src/eventsRelay.js",
      "src/tx/applyTx/index.js",
      "src/tx/index.js",
      "src/block/index.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 86,
        "functions": 88,
        "lines": 90,
        "statements": 90
      }
    }
  }
}
